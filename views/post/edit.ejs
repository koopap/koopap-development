<form method="post" action="/posts/<%= post.id %>?_method=PUT" >

    <ul>
        <li>

            <label for="title" class="rem">Title:</label>
            <input type="title" id="title" name="title" value="<%= post.title %>" />

        </li>


        <li>

                <label for="content" class="rem">Content:</label>
                <input type="text" id="content" name="content" autocomplete="off" value="<%= post.content %>"/>

        </li>
        
    </ul>

    <input type="submit" value="Save">

</form>